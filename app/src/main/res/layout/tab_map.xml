<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_button"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/change_map_hybrid"
            android:layout_width="wrap_content"
            android:text="Hybrid Map"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/change_map_normal"
            android:layout_width="wrap_content"
            android:text="Map"
            android:layout_below="@id/change_map_hybrid"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/recenter"
            android:layout_width="wrap_content"
            android:text="Center"
            android:layout_below="@id/change_map_normal"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/add_warung"
            android:text="Add"
            android:layout_below="@id/recenter"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>